<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_my_mail_message_tree" model="ir.ui.view">
        <field name="name">my.mail.message.tree</field>
        <field name="model">my.mail.message</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="user_id"/>
                <field name="sent"/>
                <field name="sent_date"/>
            </list>
        </field>
    </record>

    <record id="view_my_mail_message_form" model="ir.ui.view">
        <field name="name">my.mail.message.form</field>
        <field name="model">my.mail.message</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="user_id"/>
                        <field name="body"/>
                        <field name="sent"/>
                        <field name="sent_date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_my_mail_message" model="ir.actions.act_window">
        <field name="name">Mail Messages</field>
        <field name="res_model">my.mail.message</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_my_mail_message" name="Mail Messages" parent="menu_my_mail_root" action="action_my_mail_message"/>
</odoo>
