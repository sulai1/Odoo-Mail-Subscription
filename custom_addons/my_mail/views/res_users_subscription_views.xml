<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree view for subscribable templates shown in user notification tab -->
    <record id="view_mail_template_user_subscription_list" model="ir.ui.view">
        <field name="name">mail.template.user.subscription.list</field>
        <field name="model">mail.template</field>
        <field name="arch" type="xml">
            <list string="E-Mail-Vorlagen" create="false" edit="false" delete="false" default_group_by="template_group">
                <field name="id" string="ID"/>
                <field name="template_group" column_invisible="1"/>
                <field name="name" string="Vorlage"/>
                <field name="email_notification_type" string="Kategorie"/>
                <field name="current_user_subscribed" string="Abonnement" widget="boolean"/>
                <button name="action_toggle_current_user_subscription"
                        string="Abonnement"
                        type="object"
                        title="Abonnement umschalten"
                        icon="fa-toggle-on"
                        class="btn-link"/>
            </list>
        </field>
    </record>

    <!-- Action to show subscribable templates for user -->
    <record id="action_user_subscribable_templates" model="ir.actions.act_window">
        <field name="name">Meine E-Mail-Abonnements</field>
        <field name="res_model">mail.template</field>
        <field name="view_mode">list</field>
        <field name="view_id" ref="view_mail_template_user_subscription_list"/>
        <field name="domain">[('email_notification_type', 'in', ['informational', 'marketing'])]</field>
        <field name="context">{'group_by': 'template_group'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_empty_folder">
                Keine abonnierbaren E-Mail-Vorlagen gefunden
            </p>
            <p>
                Klicken Sie auf den Toggle-Button, um E-Mail-Benachrichtigungen zu aktivieren oder zu deaktivieren.
            </p>
        </field>
    </record>

    <record id="view_res_users_form_inherit_my_mail_notifications" model="ir.ui.view">
        <field name="name">res.users.form.inherit.my.mail.notifications</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_opted_out_templates"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-bell-slash">
                    <field name="opted_out_template_count" string="Opt-Outs" widget="statinfo"/>
                </button>
            </xpath>

            <xpath expr="//notebook" position="inside">
                <page string="Benachrichtigungen" name="my_mail_notifications" invisible="not id">

                    <group>
                        <group>
                            <label for="subscription_count" string="Abonnements"/>
                            <div class="o_row">
                                <field name="subscription_count" readonly="1" class="oe_inline"/>
                                <span> von </span>
                                <field name="total_subscribable_count" readonly="1" class="oe_inline"/>
                                <span> aktiv</span>
                            </div>
                        </group>
                    </group>

                    <separator string="E-Mail-Abonnements"/>
                    <p class="text-muted">Klicken Sie auf die Schaltfl√§che, um alle abonnierbaren E-Mail-Vorlagen anzuzeigen und Ihre Abonnements zu verwalten.</p>
                    
                    <button name="my_mail.action_user_subscribable_templates"
                            type="action"
                            string="E-Mail-Abonnements verwalten"
                            class="btn-primary"/>

                </page>
            </xpath>
        </field>
    </record>
</odoo>
